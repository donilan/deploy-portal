= simple_form_for(@task) do |f|
  = f.error_notification

  .form-inputs
    .row
      .col-md-4
        = f.input :name
      .col-md-4
        = f.association :env_group
      .col-md-4
        %br
        = f.input :admin_only
    .row
      .col-md-6
        = f.input :author
      .col-md-6
        = f.input :version

    = f.input :desc
    ~ f.input :script, input_html: { rows: 14 }

  .form-actions
    = f.button :submit
    = link_to 'Back', tasks_path, class: 'btn btn-default'
